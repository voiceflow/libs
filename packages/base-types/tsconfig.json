{
  "extends": "@voiceflow/tsconfig",
  "compilerOptions": {
    "lib": ["es2020"],
    "strict": true,
    "baseUrl": ".",
    "sourceMap": false,
    "paths": {
      "@base-types/*": ["src/*"],

      "@voiceflow/common": ["../common/src"],

      // only used to fix intra-monorepo resolution
      "@common/*": ["../common/src/*"]
    },
    "types": ["mocha"]
  },
  "include": ["src", "tests", "typings"],
  "exclude": ["**/node_modules", "**/.*/"]
}
