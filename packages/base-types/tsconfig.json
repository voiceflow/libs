{
  "extends": "@voiceflow/tsconfig",
  "compilerOptions": {
    "baseUrl": "..",
    "paths": {
      "@voiceflow/common": [
        "common/src"
      ],
      // only used to fix intra-monorepo resolution
      "@common/*": [
        "common/src/*"
      ],
      "@base-types/*": [
        "base-types/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules/**/*",
    "build/**/*"
  ]
}
