{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "build/common",
    "paths": {
      "@base-types/*": [
        "src/*"
      ]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ]
}
