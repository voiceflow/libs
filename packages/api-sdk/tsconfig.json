{
  "extends": "@voiceflow/tsconfig/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2017", "DOM"],
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "compileOnSave": false,
  "include": ["src/**/*.ts", "typings/**/*.d.ts", "example/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules/**"]
}
