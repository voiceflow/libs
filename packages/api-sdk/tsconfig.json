{
  "extends": "@voiceflow/tsconfig",
  "compilerOptions": {
    "lib": ["es2020"],
    "strict": true,
    "baseUrl": ".",
    "sourceMap": false,
    "paths": {
      "@api-sdk/*": ["src/*"],

      "@voiceflow/base-types": ["../base-types/src"],

      // only used to fix intra-monorepo resolution
      "@common/*": ["../common/src/*"],
      "@base-types/*": ["../base-types/src/*"]
    },
    "types": ["mocha"]
  },
  "include": ["src", "tests", "typings"],
  "exclude": ["**/node_modules", "**/.*/"]
}
