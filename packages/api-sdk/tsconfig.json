{
  "extends": "@voiceflow/tsconfig/monorepo.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "build/cjs",
    "paths": {
      "@api-sdk/*": ["src/*"]
    },
    "lib": [
      "DOM",
      "ES2019"
    ],
    "types": ["mocha"]
  },
  "exclude": ["node_modules", "build"]
}
