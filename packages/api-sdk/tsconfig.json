{
  "extends": "@voiceflow/tsconfig",
  "compilerOptions": {
    "baseUrl": "..",
    "paths": {
      // only used to fix intra-monorepo resolution
      "@common/*": [
        "common/src/*"
      ],
      "@voiceflow/base-types": [
        "base-types/src"
      ],
      // only used to fix intra-monorepo resolution
      "@base-types/*": [
        "base-types/src/*"
      ],
      "@api-sdk/*": [
        "api-sdk/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules/**/*",
    "build/**/*"
  ]
}
