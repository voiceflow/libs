{
  "extends": "@voiceflow/tsconfig",
  "compilerOptions": {
    "declarationMap": true,
    "baseUrl": "..",
    "paths": {
      "@voiceflow/common": [
        "common/src"
      ],
      // only used to fix intra-monorepo resolution
      "@common/*": [
        "common/src/*"
      ],
      "@voiceflow/base-types": [
        "base-types/src"
      ],
      // only used to fix intra-monorepo resolution
      "@base-types/*": [
        "base-types/src/*"
      ],
      "@voiceflow/voice-types": [
        "voice-types/src"
      ],
      // only used to fix intra-monorepo resolution
      "@voice-types/*": [
        "voice-types/src/*"
      ],
      "@voiceflow/voiceflow-types": [
        "voiceflow-types/src"
      ],
      // only used to fix intra-monorepo resolution
      "@voiceflow-types/*": [
        "voiceflow-types/src/*"
      ],
      "@alexa-types/*": [
        "alexa-types/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules/**/*",
    "build/**/*"
  ]
}
